# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
# Using Docker Compose - db service name
DB_HOST=db
DB_PORT=5432
DB_NAME=ecommerce_db
DB_USER=postgres
DB_PASSWORD=EcommerceSecure2024!
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration (for S3 file uploads) - Update these with your actual AWS credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your-ecommerce-bucket-name
S3_ENDPOINT=

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS (Update with your frontend URLs - comma separated)
# For EC2: Use your EC2 public IP or domain
# Example: CORS_ORIGINS=http://localhost:8080,https://yourdomain.com
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production
